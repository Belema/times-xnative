{
  "private": true,
  "scripts": {
    "ci": "yarn lint",
    "commit": "git-cz",
    "deps:fix": "npx @times-components/depend -l . -e '{node_modules/@times-components/*,.}/package.json' -s majority --fix",
    "deps:lint": "npx @times-components/depend -l . -e '{node_modules/@times-components/*,.}/package.json' -s majority --hint --bail",
    "deps:list": "npx @times-components/depend -l . -e '{node_modules/@times-components/*,.}/package.json' -s majority --list",
    "prelint": "yarn deps:lint",
    "lint": "lerna run lint",
    "postinstall": "lerna run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@times-components/depend": "0.1.2",
    "commitizen": "2.9.6",
    "lerna": "2.8.0"
  },
  "engines": {
    "node": ">=8.9.0",
    "yarn": "1.5.1"
  }
}
