{
  "name": "@thetimes/android-app",
  "version": "0.0.9",
  "private": true,
  "license": "BSD-3-Clause",
  "scripts": {
    "bundle:android": "cd android && ./gradlew clean && ./gradlew generateReactArchives && ./gradlew assemble && ./gradlew publish && cd ..",
    "bundle:js": "haul bundle --platform android --dev false --entry-file js/index.android.js --bundle-output android/xnative/src/main/assets/index.android.bundle",
    "bundle:move-map": "mkdir -p build && mv android/xnative/src/main/assets/index.android.bundle.map build/",
    "bundle:all": "yarn bundle && yarn bundle:android",
    "bundle": "yarn bundle:js && yarn bundle:move-map",
    "fmt": "prettier --write 'js/**/*.*'",
    "start": "haul start --platform android",
    "lint:prettier": "prettier --list-different js/**/*.*",
    "lint": "yarn lint:prettier"
  },
  "dependencies": {
    "@thetimes/article": "1.0.21",
    "@thetimes/author-profile": "1.0.16",
    "@thetimes/topic": "0.0.6",
    "react": "16.3.1",
    "react-native": "0.54.2",
    "react-native-device-info": "0.13.0",
    "react-native-svg": "6.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-native": "4.0.0",
    "babel-preset-stage-2": "6.24.1",
    "flow-bin": "0.63.1",
    "haul": "^1.0.0-beta.13",
    "prettier": "1.8.2",
    "webpack": "2"
  }
}
